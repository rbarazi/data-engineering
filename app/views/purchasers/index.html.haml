- model_class = Purchaser.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @purchasers.each do |purchaser|
      %tr
        %td= link_to purchaser.id, purchaser_path(purchaser)
        %td= purchaser.name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_purchaser_path(purchaser), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), purchaser_path(purchaser), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_purchaser_path, :class => 'btn btn-primary'
