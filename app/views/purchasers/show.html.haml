- model_class = @purchaser.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @purchaser.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), purchasers_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_purchaser_path(@purchaser), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), purchaser_path(@purchaser), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
