- model_class = @merchant.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @merchant.name
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @merchant.address

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), merchants_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_merchant_path(@merchant), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), merchant_path(@merchant), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
