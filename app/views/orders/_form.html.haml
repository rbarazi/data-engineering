= form_for @order, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :item_id, :class => 'control-label'
    .controls
      = f.number_field :item_id, :class => 'number_field'
  .control-group
    = f.label :purchaser_id, :class => 'control-label'
    .controls
      = f.number_field :purchaser_id, :class => 'number_field'
  .control-group
    = f.label :quantity, :class => 'control-label'
    .controls
      = f.number_field :quantity, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), orders_path, :class => 'btn'
